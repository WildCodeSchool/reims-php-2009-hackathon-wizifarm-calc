                <td>{{ tractor.licensePlate }}</td>
                <td>{{ tractor.purchaseDate }}</td>
                <td>{{ tractor.year }}</td>
                <td>{{ tractor.consumptionFuel }}</td>
                <td>{{ tractor.power }}</td>
                <td>{{ tractor.brand }}</td>
                <td>{{ tractor.model }}</td>
                <td>{{ tractor.value }}</td>
                <td>{{ tractor.motorLoadCoefficient }}</td>
                <td>
                    <a href="{{ path('tractor_show', {'id': tractor.id}) }}">show</a>
                    <a href="{{ path('tractor_edit', {'id': tractor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
